{
    "manifest_version": 2,
    "name": "SageAxcess",
    "version": "1.0.2",
    "description": "",
    "permissions": [ "<all_urls>", "tabs", "webRequest", "webRequestBlocking", "webNavigation", "storage" ],
    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "jquery-1.11.3.min.js", "forms.js" ],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": [ "<all_urls>" ],
            "js": [ "content.js" ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "options_ui": {
       "page": "options.html",
       "chrome_style": true
    },
    "background": {
        "scripts": ["jquery-1.11.3.min.js", "background.js"],
        "persistent": true
    }
}

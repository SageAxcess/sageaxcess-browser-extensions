{
    "manifest_version": 2,
    "background": { "page": "background.html" },
    "name": "SageAxcess",
    "version": "1.0.1",
    "description": "",
    "permissions": [ "<all_urls>", "tabs", "webRequest", "webRequestBlocking", "storage" ],
    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": [ "jquery-1.11.3.min.js", "forms.js" ],
            "all_frames": false,
            "run_at": "document_start"
        },
        {
            "matches": [ "<all_urls>" ],
            "js": [ "content.js" ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "options_ui": {
       // Required.
       "page": "options.html",
       // Recommended.
       "chrome_style": true
    }
}